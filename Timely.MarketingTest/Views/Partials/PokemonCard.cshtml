@model Timely.MarketingTest.Services.PokemonViewModel

<div class="pokemon-card">
    <h4>@Model.PokemonName</h4>
    <p><strong>Height:</strong> @Model.PokemonHeight m</p>
    <p><strong>Weight:</strong> @Model.PokemonWeight kg</p>
    <p><strong>Species:</strong> @Model.PokemonSpecies</p>
</div>

<style>
    .pokemon-card {
        border: 1px solid #ccc;
        padding: 15px;
        border-radius: 8px;
        background-color: #f9f9f9;
        margin-bottom: 15px;
    }
    
    .pokemon-card h4 {
        margin-top: 0;
        text-transform: capitalize;
        color: #333;
    }
</style>